@using Project1MVC.Models;
@using Project1MVC.Services;
@model List<Equipment>
@{
    string controller = "Equipment";
    string primaryColumn = ServicesHelper.GetDefaultColumn<Equipment>();
    ViewBag.Title = "Index";
    ViewBag.displayCols = ServicesHelper.SanitizeColumns<Equipment>(ViewBag.displayCols);

    if (ViewBag.displayPrimaryColumn == false)
    {
        ViewBag.displayCols.Remove(primaryColumn);
    }
    else
    {
        if (!ViewBag.displayCols.Contains(primaryColumn))
        {
            ViewBag.displayCols.Add(primaryColumn);
        }
    }
}

<h2>All @{@controller}s</h2>
<p>
    @Html.ActionLink("Add New", "Add")
</p>
<table class="table">
    <tr>
        @foreach (string col in ViewBag.displayCols)
        {
            <th>
                @Html.ActionLink(linkText: ServicesHelper.GetDisplayName<Equipment>(col), actionName: "Index", controllerName: controller,
                routeValues: new { sortBy = col, sortOrder = ViewBag.nextSortOrders[col] },
                htmlAttributes: null
                )
            </th>
        }
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @foreach (string col in ViewBag.displayCols)
            {
                <td>
                    @item[col]
                </td>
            }
            <td>
                @Html.ActionLink("Edit", "Edit", null, new { onClick = $"goEdit({item.EquipId});return false;" }) |
                @Html.ActionLink("Details", "Details", null, new { onClick = $"goDetails({item.EquipId});return false;" })
            </td>

        </tr>
    }
</table>

<nav aria-label="Page navigation example">
    <ul class="pagination">
        @{
            if (ViewBag.pageNumber != 1)
            {
                string pageURL = $"/{controller}/Index?pageNumber=1";

                <li class="page-item">
                    <a class="page-link" href="@pageURL" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
            }

            int maxPage = ViewBag.pageNumber + 3;

            if (maxPage > ViewBag.pageCount)
            {
                maxPage = ViewBag.pageNumber + (ViewBag.pageCount - ViewBag.pageNumber);
            }

            for (int i = (ViewBag.pageNumber - 3); i <= maxPage; i++)
            {
                if (i > 0)
                {
                    string pageURL = $"/{controller}/Index?pageNumber={i}";

                    if (i == ViewBag.pageNumber)
                    {
                        <li class="page-item active">
                            <a class="page-link" href="@pageURL">@i<span class="sr-only">(current)</span></a>
                        </li>
                        }
                        else
                        {
                            <li class="page-item"><a class="page-link" href="@pageURL">@i</a></li>
                        }
                    }
            }

            if (ViewBag.pageNumber != ViewBag.pageCount)
            {
                string pageURL = $"/{controller}/Index?pageNumber={ViewBag.pageCount}";

                <li class="page-item">
                    <a class="page-link" href="@pageURL" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            }
        }
    </ul>
</nav>

@using (Html.BeginForm("Details", controller, FormMethod.Post, new { id = "formDetails" }))
{
    @Html.Hidden("id", null, new { id = "formDetailsFieldId" })
}

@using (Html.BeginForm("Edit", controller, FormMethod.Post, new { id = "formEdit" }))
{
    @Html.Hidden("id", null, new { id = "formEditFieldId" })
}

<script>
    function goDetails(id) {
        document.getElementById('formDetailsFieldId').value = id;
        document.getElementById('formDetails').submit();
    }

    function goEdit(id) {
        document.getElementById('formEditFieldId').value = id;
        document.getElementById('formEdit').submit();
    }
</script>