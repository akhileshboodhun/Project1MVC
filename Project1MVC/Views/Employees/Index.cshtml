@model IEnumerable<Project1MVC.Models.Employee>

@{
    ViewBag.Title = "Manage Employees";
}

<h2>Manage Employees</h2>

<p>
    @if (User.IsInRole("Admin"))
    {
        @Html.ActionLink("\0", "Create", new { }, new { @class = "btn btn-success fa fas fa-user-plus fa-2x", @title = "Create" })
    }
    </p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LName)
        </th>
        @if (User.IsInRole("Admin"))
        {
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleName)
            </th>
        }
        <th></th>
        @{ if (User.IsInRole("Admin"))
            {
                <th></th>
                <th>Actions</th>
                <th></th>
            }
        }
    </tr>

    @foreach (var item in Model)
    {
        if (User.IsInRole("Technician") && !item.IsActive)
        {
            continue;
        }
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LName)
                </td>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfBirth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNo)
                    </td>
                    <td>
                        @Html.CheckBoxFor(modelItem => item.IsActive, new { data_toggle = "toggle", data_on = "Active", data_off = "Inactive", data_onstyle = "success", data_offstyle = "warning", disabled = "disabled" })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Age)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoleName)
                    </td>
                }
                <td>
                    @if (item.IsActive)
                    {
                        @Html.ActionLink("Assign Equipments", "Index", "EquipmentAssignment", new { id = item.UserId }, new { @class = "btn btn-primary" })
                    }
                </td>
                @{
                    if (User.IsInRole("Admin"))
                    {
                        <td>
                            @Html.ActionLink("\0", "Edit", new { id = item.UserId }, new { @class = "btn btn-warning fa far fa-edit", @title = "Edit" })
                        </td>

                        <td>
                            @Html.ActionLink("\0", "Details", new { id = item.UserId }, new { @class = "btn btn-info fa fas fa-info-circle", @title = "Details" })
                        </td>

                        <td>
                            @if (item.IsActive)
                            {
                                @Html.ActionLink("\0", "Terminate", new { id = item.UserId }, new { @class = "btn btn-danger fa fas fa-ban", @title = "Terminate" })
                            }
                        </td>
                    }
                }
            </tr>
        }

    </table>

